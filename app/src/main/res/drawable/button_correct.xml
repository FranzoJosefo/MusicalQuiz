<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp">
            </padding>
        </shape>
    </item>
    <item>
        <!-- Shape rounded with border -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            // The width and color of the border
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <solid
                android:color="#37ff00"
                />

            // The desired corner radius. reduce it to keep it less rounded
            <corners android:radius="45dp" />

            // Add your desired padding

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="-360"
                android:centerX="0.9"
                android:centerColor="#00bfbfbf"
                android:endColor="#00000000"
                android:startColor="#8e589453" />
            <corners android:radius="45dp" />
        </shape>
    </item>


    <!-- over right shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="180"
                android:centerX="0.9"
                android:centerColor="#00bfbfbf"
                android:endColor="#00000000"
                android:startColor="#8e53a34c" />
            <corners android:radius="45dp" />
        </shape>
    </item>
    <!-- over top shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="-90"
                android:centerY="0.9"
                android:centerColor="#00bfbfbf"
                android:endColor="#00000000"
                android:startColor="#8d1d120a"
                android:type="linear" />

            <corners android:radius="45dp" />
        </shape>
    </item>
    <!-- over bottom shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"

                android:centerY="0.9"
                android:centerColor="#00bfbfbf"
                android:endColor="#00000000"
                android:startColor="#9e000000"
                android:type="linear" />

            <corners android:radius="45dp" />
        </shape>
    </item>
</layer-list>